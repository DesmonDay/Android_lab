<?xml version="1.0" encoding="utf-8"?>
<appwidget-provider xmlns:android="http://schemas.android.com/apk/res/android"
    android:initialKeyguardLayout="@layout/m_widget"
    android:initialLayout="@layout/m_widget"
    android:minHeight="50dp"
    android:minWidth="300dp"
    android:previewImage="@mipmap/shoplist"
    android:resizeMode="horizontal|vertical"
    android:updatePeriodMillis="86400000"
    android:widgetCategory="home_screen|keyguard">

</appwidget-provider>

    <!--minWidth,minHeight:定义了Widget的最小宽高
        updatePeriodMillis: 定义了Widget的刷新频率
        previewImage: 当用户选择Widget时的预览图片
        initialLayout: Widget的布局Layout文件
        configure: 定义了用户在添加Widget时弹出的配置页面的Activity
        resizeMode: Widget在水平和垂直方向是否可以调整大小
        widgetCategory: 表示Widget可以显示的位置，包括home_screen(桌面),
            keyboard(锁屏)
    -->